@model MyPortfolio.Models.SkillViewModel

<!--Model Edit-->
<div class="modal inmodal fade" id="ModalEditSkill" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Skill</h4>
                <small class="font-bold">Update your skill .</small>
            </div>
            @using (Html.BeginForm("Update", "Skill", FormMethod.Post))
            {
                <div class="modal-body" id="modalBodyEdit">
                    <!-- start form -->
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Skill Name</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.id_skill, new { @id = "CurrentIdSkill" })
                            @Html.TextBoxFor(model => model.skill_name, new { @class = "form-control", @id = "CurrentSkillName" })
                            @Html.ValidationMessageFor(model => model.skill_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Value</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.skill_value, new { @class = "form-control", @type = "number", @id = "CurrentSkillValue" })
                            @Html.ValidationMessageFor(model => model.skill_value, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- end form -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnEditSkill" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>
