@model MyPortfolio.Models.ContactViewModel

<div class="col-lg-6 pb-3">
    <div class="card">
        <div class="card-header">
            <h3>Social Media</h3>
        </div>
        @using (Html.BeginForm("UpdateSocial", "Contact", FormMethod.Post))
        {
            <div class="card-body">
                <div class="form-group  row">
                    @Html.HiddenFor(m => m.id_contact)
                    <label class="col-sm-3 col-form-label">Instagram</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.instagram, new { @class = "form-control" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group  row">
                    <label class="col-sm-3 col-form-label">Twitter</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.twitter, new { @class = "form-control" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group  row">
                    <label class="col-sm-3 col-form-label">Facebook</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.facebook, new { @class = "form-control" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group  row">
                    <label class="col-sm-3 col-form-label">LinkedIn</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.linkedin, new { @class = "form-control" })
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group  row">
                    <label class="col-sm-3 col-form-label">Github</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.github, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="card-footer ">
                <button type="submit" id="btnSubmitSocial" class="col-lg-12 btn btn-primary">Submit</button>
            </div>
        }
    </div>
</div>