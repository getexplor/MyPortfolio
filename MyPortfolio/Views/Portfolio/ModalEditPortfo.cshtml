@model MyPortfolio.Models.PorfolioViewModel

<!--Model Edit-->
<div class="modal inmodal fade" id="ModalPortoEdit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Portofolio</h4>
                <small class="font-bold">Update your portofolio.</small>
            </div>
             @using (Html.BeginForm("Update", "Portfolio", FormMethod.Post))
             {
                <div class="modal-body" id="modalBodyEdit">
                    <!-- start form -->
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            @Html.HiddenFor(m => m.id_portfolio, new { @id = "CurrentIdPorto" })
                            @Html.TextBoxFor(model => model.portfo_name, new { @class = "form-control", @id = "CurrentTitle" })
                            @Html.ValidationMessageFor(model => model.portfo_name, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Category</label>
                        @if (ViewBag.CategoryList != null)
                        {
                            <div class="col-sm-10">
                                @Html.DropDownListFor(model => model.id_category, ViewBag.CategoryList as SelectList, "-- select --", new { @class = "form-control", @id = "CurrentCategory" })
                                @Html.ValidationMessageFor(model => model.id_category, "", new { @class = "text-danger" })
                            </div>
                        }
                    </div>
                    <div class="hr-line-dashed"></div>
                    <!-- end form -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnEditPorto" class="btn btn-primary">Submit</button>
                </div>
             }
        </div>
    </div>
</div>